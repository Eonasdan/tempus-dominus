{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "es2019", "ES2021.String"],
    "moduleResolution": "node",
    "rootDir": "./src/js",
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/js/**/*.ts"],
  "exclude": ["node_modules"]
}
