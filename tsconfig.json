{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "es2019", "ES2021"],
    "moduleResolution": "node",
    "rootDir": "./src/js",
    "declaration": true,
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/js/**/*.ts"],
  "exclude": ["node_modules"]
}
